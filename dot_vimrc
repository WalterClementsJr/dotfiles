set nocp
set encoding=utf-8

syntax on
filetype plugin indent on 

set t_Co=256

set noerrorbells
set novisualbell

set number relativenumber
set ruler
set ttyfast

set tabstop=2 softtabstop=2
set shiftwidth=2
set expandtab
set autoindent
set nowrap
set backspace=indent,eol,start
set autoread

set ignorecase
set smartcase
set hlsearch
set showmatch
set incsearch

set hidden

let mapleader=" "

inoremap jk <Esc>
tnoremap JK <C-\><C-n>
tnoremap <esc><esc> <C-\><C-n>

" netwr
nnoremap <leader>ee :Lexplore %:p:h<CR>
nnoremap <Leader>ed :Lexplore<CR>


" buffers
nnoremap <Leader>bb :buffers<CR>:buffer<Space>
nnoremap <S-h> <cmd>bnext<CR>
nnoremap <S-l> <cmd>bprev<CR>
nnoremap <leader>bd <cmd>bdelete<CR>
nnoremap <leader>bo <cmd>%bd\|e#\|bd#<CR>

nnoremap <Esc> :nohlsearch<CR><C-l>

" window
nnoremap <C-Up> <cmd>resize +2<cr>
nnoremap <C-Down> <cmd>resize -2<cr>
nnoremap <C-Left> <cmd>vertical resize -1<cr>
nnoremap <C-Right> <cmd>vertical resize +2<cr>

